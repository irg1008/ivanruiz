---
import Layout from '@/layouts/Layout.astro'
import { Button, Code } from '@nextui-org/react'
import { FrownIcon } from 'lucide-react'

const path = Astro.url.pathname
---

<Layout title='Page not found'>
  <main class='relative grid min-h-dvh w-full place-content-center overflow-hidden'>
    <div class='flex flex-col items-center gap-4'>
      <h1 class='flex items-baseline font-mogi text-[30vw] leading-none text-secondary'>
        <span class='z-10'>4</span>
        <FrownIcon
          client:load
          className='m-[-8dvw] flex size-[0.75em] h-min translate-y-4 items-end text-foreground'
        />
        <span>4</span>
      </h1>

      <Code client:load>
        <span class='line-clamp-1 max-w-[80dvw] text-balance'>
          path not found: {path}
        </span>
      </Code>

      <Button client:load href={'/'} as={'a'} color='secondary' variant='solid'> Go home </Button>
    </div>
  </main>
</Layout>
